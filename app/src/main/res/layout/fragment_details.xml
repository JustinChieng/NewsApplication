<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.justin.MainActivity">


        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="330dp"
            android:layout_height="332dp"
            android:src="@drawable/bbc"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNews"
            android:layout_width="333dp"
            android:layout_height="225dp"
            android:background="@drawable/edit_text_bg"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In pellentesque vestibulum elit, non sodales urna ultricies id. Donec placerat, elit sit amet lacinia auctor, magna magna pretium augue, et placerat tortor nibh a tellus. Aliquam sagittis dapibus libero, vitae iaculis ligula porttitor non. Suspendisse tempus, leo a pharetra tristique, libero lectus suscipit lectus, ac aliquam enim augue non arcu. Ut fringilla id mauris a ornare. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Etiam luctus dictum blandit. Praesent eu consequat nisi. Mauris odio enim, efficitur in vulputate ac, viverra vel nisi. Phasellus in mattis risus."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivImage" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:layout_marginStart="108dp"
            android:backgroundTint="@color/app_bg"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNews"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="67dp"
            android:layout_height="54dp"
            android:layout_marginTop="588dp"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>